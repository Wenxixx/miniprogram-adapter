{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["ES2015"],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": ["src/**/*"]
}
